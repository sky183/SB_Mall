<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.sb.mall.dao.MemberDao">
 	<insert id="insert"
 		parameterType="com.sb.mall.model.MemberInfo"
 		useGeneratedKeys="true" keyProperty="userSeq">
 		insert into MemberInfo (userId,userPw,userName,address1,address2,zipCode,phone)
 		values (#{userId},#{userPw},#{userName},#{address1},#{address2},#{zipCode},#{phone})
 	</insert>

	<select id="selectById" resultType="com.sb.mall.model.MemberInfo">
		select * from MemberInfo where	userid = #{userId}
	</select>

	<select id="selectAll" resultType="com.sb.mall.model.MemberInfo">
		select * from MemberInfo
	</select>
	
	<update id="update" parameterType="com.sb.mall.model.MemberInfo">
		update MemberInfo set userpw=#{userPw}, username=#{userName}, address1=#{address1}, address2=#{address2}
		, zipCode=#{zipCode}, phone=#{phone}, gradenum=#{gradeNum} where userid=#{userId}
	</update>
	
	<delete id="delete" parameterType="String">
		delete from MemberInfo where userid = #{userId}
	</delete>
	
	<select id="selectCount" resultType="int">
		select count(*) from MemberInfo
	</select>
	
	<select id="selectList" resultType="com.sb.mall.model.MemberInfo">
		select * from
		MemberInfo order by userSeq desc limit #{param1},
		#{param2}
	</select>
 </mapper>