<mapper namespace="com.sb.mall.mybatis.QnAMybatis">
 		
 
	<!-- 게시판 추가하기 -->
    <insert id="insertQnA">
        insert into QnABoard (qtitle,qtext,atext,qwriteDate,userSeq,qnaSeq)
 		value(#{qtitle},#{qtext},#{atext},SYSDATE(),#{userSeq},#{qnaSeq})
    </insert>
    
    <!-- 게시판 리스트보기 -->
    <select id="listQnA" resultType="com.sb.mall.model.QnABoard">
    <![CDATA[
    
        select * from QnABoard 
        order by qnaSeq DESC
    ]]>
    </select>
    
    <!-- 게시판 상세보기 -->
    <select id="detailQnA" resultType="com.sb.mall.model.QnABoard">
            select * from QnABoard where qnaSeq = #{qnaSeq}
    </select>
 
    <!-- 게시판 삭제하기 -->
    <delete id="deleteQnA">
        delete from QnABoard where qnaSeq = #{qnaSeq}
    </delete>
    
    <!-- 게시판 수정하기 -->
    <update id="updateQnA">
        update QnABoard set qtitle=#{qtitle} , qtext = #{qtext} where qnaSeq = #{qnaSeq}
    </update>

	
	
	
	
