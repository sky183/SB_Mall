<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sb.mall.dao.HomeDao">
	<select id="selectDailyDeal" resultType="com.sb.mall.model.MemberInfo">
		select * from SaleBoard, product order by viewSeq Desc limit 0,5
	</select>
	
	<select id="selectNewProduct" resultType="com.sb.mall.model.MemberInfo">
		select * from saleBoard order by writeSeq Desc limit 0,8
	</select>
</mapper>