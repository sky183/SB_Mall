<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sb.mall.FreeBoard.dao.FreeBoardDao">
 		
 	<!-- Create -->
    <insert id="insert_FreeBoard" parameterType="com.sb.mall.FreeBoard.model.FreeBoard"
    useGeneratedKeys="true" keyProperty="boardSeq">
 		insert into FreeBoard (boardTitle,boardContent,writerName)
		values(#{boardTitle},#{boardContent},#{writerName});
    </insert>
    
 	<!-- Read:게시글 번호로 해당 게시글 조회 select*from FreeBoard where boardSeq = 4; -->
 	<select id="select_FreeBoard" parameterType="com.sb.mall.FreeBoard.model.FreeBoard">
 		select*from FreeBoard where boardSeq = #{boardSeq}
 	</select>
 	
 	<!-- Update -->
 	<update id="update_FreeBoard">
 		<!-- update QnABoard set qtitle=#{qtitle} , qtext = #{qtext} where qnaSeq = #{qnaSeq} -->
 		
 	</update>
 	<!-- Delete -->
	
	
	
</mapper>